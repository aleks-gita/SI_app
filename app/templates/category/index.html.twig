{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_question_list'|trans}}
{% endblock %}

{% block body %}
    <h1> {{ 'title_category_list'|trans}} </h1>
    {% if pagination is defined and pagination.items|length %}

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label_id'|trans, 'category.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label_name'|trans, 'category.name' ) }}</th>
                <th>{{ 'label_actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination.items %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ url('category_create', {id: category.id}) }}" title="view" id="view_button">
                            {{ 'action_create'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_edit', {id: category.id}) }}" title="view" id="view_button">
                            {{ 'action_edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_delete', {id: category.id}) }}" title="view" id="view_button">
                            {{ 'action_delete'|trans }}
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>


    {% else %}
        <p>
            {{ 'massage_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock %}
