{% extends 'base.html.twig' %}

{% block title %}
    {{ 'name_question_create'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'name_question_create'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('question_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" id="view_button" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('question_index') }}" id="view_button">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}