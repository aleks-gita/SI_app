{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_question_delete'|trans({'%id%': question.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_question_delete'|trans({'%id%': question.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('question_delete', {id: question.id}) }) }}
    {{ form_widget(form) }}
    <p>{{ 'communicate_delete'|trans}}</p>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_save'|trans }}" id="back_view" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('question_index') }}" id="back_view">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}